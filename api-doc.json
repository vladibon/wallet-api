{
  "openapi": "3.0.0",
  "info": {
    "title": "Wallet API overview",
    "version": "v1"
  },
  "tags": ["User", "Auth"],
  "schemes": ["http"],
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "registrate user",
        "produces": ["application/json"],
        "requestBody": {
          "description": "Body of request for user registration",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User-registration-request"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "user was created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User-registration-respons"
                }
              }
            }
          },
          "409": {
            "description": "Can't create user because email already taken",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User with email: {{submited email}} already exist"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "login user",
        "produces": ["application/json"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User-login-request"
              }
            }
          }
        },

        "responses": {
          "200": {
            "description": "User successfully logged in",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User-login-response"
                }
              }
            }
          },
          "401": {
            "description": "User unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Email or password is wrong"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "get": {
        "tags": ["Auth"],
        "summary": "logout user",
        "produces": ["application/json"],

        "responses": {
          "204": {
            "description": "User successfully logged out"
          }
        }
      }
    },
    "/user/current": {
      "get": {
        "tags": ["User"],
        "summary": "get user information",
        "produces": ["application/json"],

        "responses": {
          "200": {
            "description": "Returns user information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User-current-response"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "properties": {
          "id": {
            "type": "string",
            "example": "sdfdfhgfd"
          },
          "email": {
            "type": "string",
            "example": "user@gmail.com"
          },
          "name": { "type": "string", "example": "Mango" },
          "password": {
            "type": "string",
            "example": "strong_password"
          }
        }
      },
      "User-registration-request": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "mango@gmail.com"
          },
          "password": {
            "type": "string",
            "example": "strong_password"
          },
          "name": {
            "type": "string",
            "example": "Mango"
          }
        }
      },
      "User-registration-respons": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "mango@gmail.com"
          },
          "name": {
            "type": "string",
            "example": "Mango"
          }
        }
      },
      "User-login-request": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "mango@gmail.com"
          },
          "password": {
            "type": "string",
            "example": "strong_password"
          }
        }
      },
      "User-login-response": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          },
          "user": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "example": "mango@gmail.com"
              },
              "password": {
                "type": "string",
                "example": "strong_password"
              }
            }
          }
        }
      },
      "User-current-response": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "mango@gmail.com"
          },
          "name": {
            "type": "string",
            "example": "Mango"
          }
        }
      }
    }
  },
  "definitions": {
    "Pet": {
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        }
      }
    }
  },
  "consumes": ["application/json"]
}
